{
  "name": "mono-bootstrap-monorepo",
  "version": "1.0.0",
  "description": "Vue 3 Monorepo with Module Federation - Apps & Packages Structure",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "dev:host": "pnpm --filter @mono-bootstrap/host dev",
    "dev:remote-app": "pnpm --filter @mono-bootstrap/remote-app dev",
    "dev:ui": "pnpm --filter @mono-bootstrap/ui dev",
    "build": "pnpm -r run build",
    "preview": "pnpm -r run preview",
    "type-check": "pnpm -r run type-check"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.2"
  },
  "pnpm": {
    "overrides": {
      "vue": "^3.3.4",
      "pinia": "^2.1.6"
    }
  }
}
